<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InquirActivity"
    android:layoutDirection="rtl">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:id="@+id/tool"
        app:titleTextColor="@color/colorPrimaryDark"
        android:background="@color/colorPrimaryDark"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginRight="15dp"
            android:padding="5dp"
            android:layout_marginBottom="10dp"
            android:layout_height="140dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="25dp"
                android:textStyle="bold"
                android:text="استعلام عن معاملة"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:layout_below="@+id/im"
                android:id="@+id/title"
                android:fontFamily="@font/ad_font"
                android:layout_height="wrap_content" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:id="@+id/im"
                android:src="@drawable/logo3" />
            <ImageView
                android:layout_width="50dp"
                android:layout_marginTop="50dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentRight="true"
                android:layout_height="50dp"
                android:layout_weight=".5"
                android:src="@drawable/ic_settings"
                android:onClick="settings"/>

        </RelativeLayout>


    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:id="@+id/inquir_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/tool">

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_marginRight="10dp"
            android:id="@+id/cusmNum_lay"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape6"
            android:layout_height="50dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/colorPrimary"
                android:layout_alignParentLeft="true"
                android:id="@+id/copy1"
                android:background="@drawable/barcode" />

            <EditText
                android:id="@+id/cusmNum_et"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:hint="ادخل رقم الاشتراك"
                android:background="@null"
                android:layout_toRightOf="@+id/copy1"
                android:textColor="#000000"
                android:layout_centerVertical="true"
                android:ems="10"
                android:inputType="text"
                android:textStyle="bold"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/ad_font"
                android:layout_centerHorizontal="true"
                android:textSize="18dp" />

        </RelativeLayout>
        <Button
            android:id="@+id/inquir_btn1"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_toLeftOf="@id/cusmNum_lay"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shape4"
            android:fontFamily="@font/ad_font"
            android:text="بحث"
            android:textColor="#ffff"
            android:textSize="18dp"
            android:textStyle="bold"
            android:onClick="InquirCusmNum"/>

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_marginRight="10dp"
            android:id="@+id/processLay"
            android:layout_below="@id/cusmNum_lay"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape6"
            android:layout_height="50dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/colorPrimary"
                android:layout_alignParentLeft="true"
                android:id="@+id/copy2"
                android:background="@drawable/barcode" />

            <EditText
                android:id="@+id/processNum_et"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:hint="ادخل رقم العملية"
                android:background="@null"
                android:layout_toRightOf="@+id/copy2"
                android:textColor="#000000"
                android:layout_centerVertical="true"
                android:ems="10"
                android:inputType="text"
                android:textStyle="bold"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/ad_font"
                android:layout_centerHorizontal="true"
                android:textSize="18dp" />

        </RelativeLayout>
        <Button
            android:id="@+id/inquir_btn2"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_toLeftOf="@id/processLay"
            android:layout_below="@id/inquir_btn1"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shape4"
            android:fontFamily="@font/ad_font"
            android:text="بحث"
            android:textColor="#ffff"
            android:textSize="18dp"
            android:textStyle="bold"
            android:onClick="InquirProcessNum"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/inquir_lay"
        android:layout_above="@id/btnLay"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <FrameLayout
                android:id="@+id/frame_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/empdata_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/toolbar"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/selector_fieldset_background"
                    android:elevation="1dp">

                    <TextView
                        android:id="@+id/tx1"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="23dp"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/ad_font"
                        android:text="اسم المشترك"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/cusmName"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@id/tx1"
                        android:background="@drawable/textboxstyle"
                        android:elevation="1dp"
                        android:ellipsize="start"
                        android:ems="10"
                        android:enabled="false"
                        android:fontFamily="@font/ad_font"
                        android:inputType="text"
                        android:paddingTop="2dp"
                        android:paddingRight="7dp"
                        android:paddingBottom="2dp"
                        android:text=""
                        android:textColor="#000000"
                        android:textDirection="rtl"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tx2"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tx1"
                        android:layout_marginTop="18dp"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/ad_font"
                        android:text="رقم الاشتراك"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/cusm_No"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_below="@id/cusmName"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@id/tx2"
                        android:background="@drawable/textboxstyle"
                        android:ems="10"
                        android:enabled="false"
                        android:fontFamily="@font/ad_font"
                        android:inputType="number"
                        android:paddingTop="2dp"
                        android:paddingRight="7dp"
                        android:paddingBottom="2dp"
                        android:textColor="#000000"
                        android:textDirection="rtl"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tx3"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tx2"
                        android:layout_marginTop="9dp"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/ad_font"
                        android:text="البلدة"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/city"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_below="@id/cusm_No"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@id/tx2"
                        android:background="@drawable/textboxstyle"
                        android:ellipsize="start"
                        android:ems="10"
                        android:enabled="false"
                        android:fontFamily="@font/ad_font"
                        android:inputType="text"
                        android:paddingTop="2dp"
                        android:paddingRight="7dp"
                        android:paddingBottom="2dp"
                        android:text=""
                        android:textColor="#000000"
                        android:textDirection="rtl"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/txt4"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tx3"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="2dp"
                        android:fontFamily="@font/ad_font"
                        android:text="العنوان"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/address_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/city"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="2dp"
                        android:layout_toLeftOf="@id/txt4"
                        android:background="@drawable/textboxstyle"
                        android:ellipsize="start"
                        android:enabled="false"
                        android:fontFamily="@font/ad_font"
                        android:inputType="textMultiLine"
                        android:maxLines="3"
                        android:paddingTop="2dp"
                        android:paddingRight="7dp"
                        android:paddingBottom="2dp"
                        android:scrollHorizontally="true"
                        android:text=""
                        android:textColor="#000000"
                        android:textDirection="rtl"
                        android:textSize="15dp" />


                    <LinearLayout
                        android:id="@+id/lacationLay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/address_name"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="25dp"
                        android:layoutDirection="rtl"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="2dp"
                            android:layout_weight=".85"
                            android:fontFamily="@font/ad_font"
                            android:text="الموقع"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/lacation"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="2.15"
                            android:background="@drawable/textboxstyle"
                            android:ellipsize="start"
                            android:ems="10"
                            android:enabled="false"
                            android:fontFamily="@font/ad_font"
                            android:inputType="text"
                            android:paddingTop="2dp"
                            android:paddingRight="7dp"
                            android:paddingBottom="2dp"
                            android:text=""
                            android:textColor="#000000"
                            android:textDirection="rtl"
                            android:textSize="15dp" />
                    </LinearLayout>

                </RelativeLayout>
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ad_font"
                android:text="التفتيش"
                android:paddingRight="2dp"
                android:paddingLeft="2dp"
                android:layout_marginRight="25dp"
                android:background="#ffffff"
                android:textColor="@color/colorAccent"
                android:textSize="14dp"
                android:textStyle="bold"
                android:elevation="1dp"
                android:id="@+id/instext"
                android:visibility="gone"/>
            <RelativeLayout
                android:id="@+id/inspdata_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-14dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/selector_fieldset_background"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:orientation="horizontal"
                    android:id="@+id/inspDateLay"
                    android:layoutDirection="rtl"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight=".85"
                        android:layout_gravity="center"
                        android:fontFamily="@font/ad_font"
                        android:layout_height="wrap_content"
                        android:text="تاريخ التفتيش"
                        android:layout_marginRight="20dp"
                        android:textSize="15dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/inspDate"
                        android:layout_width="0dp"
                        android:layout_weight="2.15"
                        android:layout_gravity="center"
                        android:layout_height="30dp"
                        android:layout_marginRight="5dp"
                        android:elevation="1dp"
                        android:fontFamily="@font/ad_font"
                        android:layout_marginLeft="30dp"
                        android:layout_toLeftOf="@id/tx1"
                        android:background="@drawable/textboxstyle"
                        android:ellipsize="start"
                        android:ems="10"
                        android:inputType="text"
                        android:textDirection="rtl"
                        android:paddingRight="7dp"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:text=""
                        android:maxLength="20"
                        android:textColor="#000000"
                        android:textSize="15dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:orientation="horizontal"
                    android:id="@+id/noteDateLay"
                    android:layout_below="@id/inspDateLay"
                    android:layoutDirection="rtl"
                    android:layout_marginTop="15dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight=".85"
                        android:layout_gravity="center"
                        android:fontFamily="@font/ad_font"
                        android:layout_height="wrap_content"
                        android:text="تاريخ تزويد الجهة بالملاحظات"
                        android:layout_marginRight="20dp"
                        android:textSize="15dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/noteDate"
                        android:layout_width="0dp"
                        android:layout_weight="2.15"
                        android:maxLength="20"
                        android:layout_gravity="center"
                        android:layout_height="30dp"
                        android:layout_marginRight="5dp"
                        android:elevation="1dp"
                        android:fontFamily="@font/ad_font"
                        android:layout_marginLeft="30dp"
                        android:layout_toLeftOf="@id/tx1"
                        android:background="@drawable/textboxstyle"
                        android:ellipsize="start"
                        android:ems="10"
                        android:inputType="text"
                        android:textDirection="rtl"
                        android:paddingRight="7dp"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="15dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:orientation="horizontal"
                    android:id="@+id/processNoteDateLay"
                    android:layout_below="@id/noteDateLay"
                    android:layoutDirection="rtl"
                    android:layout_marginTop="15dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight=".85"
                        android:layout_gravity="center"
                        android:fontFamily="@font/ad_font"
                        android:layout_height="wrap_content"
                        android:text="تاريخ معالجة الملاحظات"
                        android:layout_marginRight="20dp"
                        android:textSize="15dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/processNoteDate"
                        android:layout_width="0dp"
                        android:layout_weight="2.15"
                        android:layout_gravity="center"
                        android:layout_height="30dp"
                        android:maxLength="20"
                        android:layout_marginRight="5dp"
                        android:elevation="1dp"
                        android:fontFamily="@font/ad_font"
                        android:layout_marginLeft="30dp"
                        android:layout_toLeftOf="@id/tx1"
                        android:background="@drawable/textboxstyle"
                        android:ellipsize="start"
                        android:ems="10"
                        android:inputType="text"
                        android:textDirection="rtl"
                        android:paddingRight="7dp"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="15dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:orientation="horizontal"
                    android:id="@+id/EngNoteDateLay"
                    android:layout_below="@id/processNoteDateLay"
                    android:layoutDirection="rtl"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight=".85"
                        android:layout_gravity="center"
                        android:fontFamily="@font/ad_font"
                        android:layout_height="wrap_content"
                        android:text="ملاحظات"
                        android:layout_marginRight="20dp"
                        android:textSize="15dp"
                        android:textStyle="bold"/>
                    <EditText
                        android:id="@+id/EngNoteDate"
                        android:layout_width="0dp"
                        android:layout_weight="2.15"
                        android:layout_gravity="center"
                        android:layout_height="30dp"
                        android:layout_marginRight="5dp"
                        android:elevation="1dp"
                        android:fontFamily="@font/ad_font"
                        android:layout_marginLeft="30dp"
                        android:layout_toLeftOf="@id/tx1"
                        android:background="@drawable/textboxstyle"
                        android:ellipsize="start"
                        android:ems="10"
                        android:inputType="textMultiLine"
                        android:textDirection="rtl"
                        android:paddingRight="7dp"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="15dp"/>
                </LinearLayout>


            </RelativeLayout>


        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/btnLay">
        <Button
            android:id="@+id/sendbtn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:textSize="15dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/shape4"
            android:text="ارسال الطلب الى ربط المنشأة"
            android:fontFamily="@font/ad_font"
            android:textStyle="bold"
            android:textColor="#ffffff" />
        <Button
            android:id="@+id/finishbtn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:textSize="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/shape4"
            android:text="انهاء الطلب لعدم استكمال الاجراء"
            android:fontFamily="@font/ad_font"
            android:textStyle="bold"
            android:textColor="#ffffff"/>
        <Button
            android:id="@+id/fillbtn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:textSize="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/shape4"
            android:text="ارفاق نموذج"
            android:fontFamily="@font/ad_font"
            android:textStyle="bold"
            android:textColor="#ffffff"/>
    </LinearLayout>
</RelativeLayout>